my_array = [6, 2, 4, 8, 7, 6, 3, 8, 4, 2]
n = len(my_array)

for i in range(n):
    for j in range(n-i-1):
        if my_array[j] > my_array[j+1]:
            my_array[j], my_array[j+1] = my_array[j+1], my_array[j]
            print("sorted array:", my_array)

print("Final sorted array:", my_array)
